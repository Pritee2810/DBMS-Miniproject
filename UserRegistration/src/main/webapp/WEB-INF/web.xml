<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee">
<welcome-file-list>
<welcome-file>index.html</welcome-file>
<welcome-file>Register.html</welcome-file>
<welcome-file>ForgetPass.jsp</welcome-file>
<welcome-file>UserHome.jsp</welcome-file>
<welcome-file>ChangePassword.java</welcome-file>
<welcome-file>ForgetPassword.java</welcome-file>
<welcome-file>LoginUser.java</welcome-file>
<welcome-file>Register.java</welcome-file>
</welcome-file-list>

<servlet>
	<servlet-name>First</servlet-name>
	<servlet-class>com.rspc.Register</servlet-class>
</servlet>
<servlet-mapping>
	<servlet-name>First</servlet-name>
	
	<url-pattern>/Add</url-pattern>
</servlet-mapping>

<servlet>
<servlet-name>CP</servlet-name>
<servlet-class>com.rspc.ChangePassword</servlet-class>
</servlet>
<servlet-mapping>
<servlet-name>CP</servlet-name>
<url-pattern>/ChangePass</url-pattern>
</servlet-mapping>

<servlet>
<servlet-name>FR</servlet-name>
<servlet-class>com.rspc.ForgetPassword</servlet-class>
</servlet>
<servlet-mapping>
<servlet-name>FR</servlet-name>
<url-pattern>/JSP/Forget</url-pattern>
</servlet-mapping>

<servlet>
<servlet-name>UserLog</servlet-name>
<servlet-class>com.rspc.LoginUser</servlet-class>
</servlet>
<servlet-mapping>
<servlet-name>UserLog</servlet-name>
<url-pattern>/Login</url-pattern>
</servlet-mapping>

<servlet>
<servlet-name>ForgetPass</servlet-name>
<servlet-class>/JSP/ForgetPass.jsp</servlet-class>
</servlet>
<servlet-mapping>
<servlet-name>ForgetPass</servlet-name>
<url-pattern>/ForgetPass</url-pattern>
</servlet-mapping>
</web-app>